@model ProjectExpensesManager.Models.UserCategorie

@{
    ViewData["Title"] = "Add category";
    ViewData["PageTitle"] = "Додання категорії";
    Layout = "~/Views/Shared/_CreateOrAddCategoryLayout.cshtml";
    ViewData["Sidebar"] = "active";
    ViewData["Back"] = "/UserCategories/Index";
}


<form asp-action="Create">

    <h2 style="text-align: center">Додання категорії</h2>
    <hr />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-3">
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
        <label asp-for="CategoryId" class="control-label">Виберіть категорію</label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Limit" class="form-control" type="number" step="any" />
        <label asp-for="Limit" class="control-label">Ліміт</label>
        <span asp-validation-for="Limit" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="submit" value="Додати" class="w-100 btn btn-lg reg-log-button" />
        @if (ViewData["Back"] != null)
        {
            <a href="@ViewData["Back"]" class="btn btn-return">
                <img class="img-back" src="https://cdn0.iconfinder.com/data/icons/typicons-2/24/arrow-back-256.png" alt="Arrow" style="margin-right: 5px;">
                <span>Повернутись</span>
            </a>
        }
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $("#CategoryId").select2();
        });
    </script>
}
